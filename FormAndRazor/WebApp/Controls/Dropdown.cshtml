@{
    Layout = "~/_Layout.cshtml";
    Page.Title = "DropDown (Select)";
    var pagechoice = Request.Form["pageselection"];
}
@section banner{
    <h1>Drop Down (Select)</h1>
}

@if(IsPost)
{
    switch(pagechoice.ToUpper())
    {
        case "TEXTBOXES":
            {
                //Use relative addressing to access the appropriate page.
                //Use the .Redirect(page) method of the Response object. Used for outgoing, opposed to Request (incoming).
                Response.Redirect("TextBoxes.cshtml");
                break;
            }
        case "RADIOBUTTONS":
            {
                Response.Redirect("RadioButtons.cshtml");
                break;
            }
        case "CHECKBOXES":
            {
                Response.Redirect("Checkboxes.cshtml");
                break;
            }
        default:
            {
                //Not selecting a page in essence means that the prompt selection is still showing.
                <p><span style="color:crimson"><strong>Make a selection from the list of samples available.</strong></span></p>
                break;
            }
    }
}

<form id="theform" method="post">
    <div class="row">
        <div class="col-sm-offset-4">
            <label for="pageselection">Select your sample:</label>
            &nbsp;&nbsp;
            <select id="pageselection" name="pageselection">
                <option value="">Select...</option>
                <option value="Textboxes">Textboxes</option>
                <option value="RadioButtons">RadioButtons</option>
                <option value="Checkboxes">Checkboxes</option>
            </select>
            &nbsp;&nbsp;
            <button type="submit" id="formbutton" name="formbutton"
                    value="GoTo" class="btn btn-primary">
                Go To...
            </button>
        </div>
    </div>
</form>

